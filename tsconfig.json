{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "services/*": ["services/*"],
      "routes/*": ["routes/*"],
      "plugins/*": ["plugins/*"],
      "services": ["services/index"],
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
