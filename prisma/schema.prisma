generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  createdAt  DateTime    @default(now())
  portfolios Portfolio[]
}

model Portfolio {
  id         String      @id @default(cuid())
  user       User        @relation(fields: [userId], references: [id])
  userId     String
  name       String
  baseCcy    String      @default("USD")
  positions  Position[]
  createdAt  DateTime    @default(now())
  // ingestion metadata
  lastIngestAt     DateTime?
  lastIngestStatus String?
  trades           Trade[]
}

model Position {
  id          String     @id @default(cuid())
  portfolio   Portfolio  @relation(fields: [portfolioId], references: [id])
  portfolioId String
  symbol      String
  quantity    Decimal    @db.Decimal(18, 6)
  avgCost     Decimal    @db.Decimal(18, 6)
  createdAt   DateTime   @default(now())
}

model Price {
  id        String   @id @default(cuid())
  symbol    String   @unique
  last      Decimal  @db.Decimal(18, 6)
  updatedAt DateTime @updatedAt
}

model Trade {
  id           String     @id @default(cuid())
  portfolio    Portfolio  @relation(fields: [portfolioId], references: [id])
  portfolioId  String
  symbol       String
  side         String
  qty          Decimal    @db.Decimal(18, 6)
  price        Decimal    @db.Decimal(18, 6)
  tradedAt     DateTime
  externalId   String     @unique
  createdAt    DateTime   @default(now())
}
